<?xml version="1.0" encoding="utf-8" ?>
<ComponentList>
  <Components>
    <Toolbar name="toolbar">
      <EventResponses>
        <EventResponse>
          <Action>select-tool</Action>
          <Trigger sender="tool" eventtype="LeftClick" />
        </EventResponse>
        <EventResponse>
          <Action>deselect-tool</Action>
          <Trigger sender="*" eventtype="RightClick" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Bottom</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <BackgroundColour r="140" g="140" b="140" a="255"/>
    </Toolbar>
    
    <Button name="remove-column-button" width="50" height="50">
      <Text>-</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="column-button" width="100" height="50">
      <Text></Text>
      <EventResponses>
        <EventResponse>
          <Action>edit-text</Action>
          <Trigger sender="appstate" eventtype="ChangeWidth" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>70</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="0" g="0" b="0" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="0" b="255" a="255" />
    </Button>
    
    <Button name="add-column-button" width="50" height="50">
      <Text>+</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>180</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="remove-row-button" width="50" height="50">
      <Text>-</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="row-button" width="100" height="50">
      <Text></Text>
      <EventResponses>
        <EventResponse>
          <Action>edit-text</Action>
          <Trigger sender="appstate" eventtype="ChangeHeight" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>70</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="0" g="0" b="0" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="0" b="255" a="255" />
    </Button>
    
    <Button name="add-row-button" width="50" height="50">
      <Text>+</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>180</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>

    <Button name="save-button" width="220" height="50">
      <Text>Save</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>130</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="load-button" width="220" height="50">
      <Text>Load</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>190</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>

    <Button name="reset-button" width="220" height="50">
      <Text>Reset</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>250</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Container name="save-container" width="400" height="200" visible="false" interactive="false" blocker="true">
      <EventResponses>
        <EventResponse>
          <Action>show</Action>
          <Trigger sender="save-button" eventtype="LeftClick" />
        </EventResponse>
        <EventResponse>
          <Action>hide</Action>
          <Trigger sender="save-button-no" eventtype="LeftClick" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Middle</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <BackgroundColour r="100" g="100" b="100" a="255"/>
      <HoverBackgroundColour r="100" g="100" b="100" a="255"/>
      <Components>
        
        <Textbox name="text" width="300" height="50">
          <Text></Text>
          <RelativePositionProfile>
            <HorizontalAlign>Middle</HorizontalAlign>
            <VerticalAlign>Top</VerticalAlign>
            <OffsetX>0</OffsetX>
            <OffsetY>50</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <FocusTextColour r="0" g="0" b="0" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
          <FocusBackgroundColour r="255" g="255" b="255" a="255" />
        </Textbox>

        <Button name="save-button-yes" width="100" height="50">
          <Text>Save</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Left</HorizontalAlign>
            <VerticalAlign>Bottom</VerticalAlign>
            <OffsetX>20</OffsetX>
            <OffsetY>-20</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
        
        <Button name="save-button-no" width="100" height="50">
          <Text>Cancel</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Right</HorizontalAlign>
            <VerticalAlign>Bottom</VerticalAlign>
            <OffsetX>-20</OffsetX>
            <OffsetY>-20</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
      </Components>
    </Container>
  
    
    <Container name="load-container" width="500" height="500" visible="false" interactive="false" blocker="true">
      <EventResponses>
        <EventResponse>
          <Action>show</Action>
          <Trigger sender="load-button" eventtype="LeftClick" />
        </EventResponse>
        <EventResponse>
          <Action>hide</Action>
          <Trigger sender="load-button-no" eventtype="LeftClick" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Middle</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <BackgroundColour r="100" g="100" b="100" a="255"/>
      <HoverBackgroundColour r="100" g="100" b="100" a="255"/>
      <Components>

        <Button name="load-button-yes" width="100" height="50">
          <Text>Save</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Left</HorizontalAlign>
            <VerticalAlign>Bottom</VerticalAlign>
            <OffsetX>20</OffsetX>
            <OffsetY>-20</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
        
        <Button name="load-button-no" width="100" height="50">
          <Text>Cancel</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Right</HorizontalAlign>
            <VerticalAlign>Bottom</VerticalAlign>
            <OffsetX>-20</OffsetX>
            <OffsetY>-20</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
      </Components>
    </Container>
  </Components>
</ComponentList>