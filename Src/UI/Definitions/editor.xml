<?xml version="1.0" encoding="utf-8" ?>
<ComponentList>
  <Components>
    <Toolbar name="toolbar">
      <EventResponses>
        <EventResponse>
          <Action>select-tool</Action>
          <Trigger sender="tool" eventtype="LeftClick" />
        </EventResponse>
        <EventResponse>
          <Action>deselect-tool</Action>
          <Trigger sender="*" eventtype="RightClick" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Bottom</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <BackgroundColour r="140" g="140" b="140" a="255"/>
    </Toolbar>
    
    <Button name="remove-column-button" width="50" height="50">
      <Text>-</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="column-button" width="100" height="50">
      <Text></Text>
      <EventResponses>
        <EventResponse>
          <Action>edit-text</Action>
          <Trigger sender="appstate" eventtype="Select" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>70</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="0" g="0" b="0" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="0" b="255" a="255" />
    </Button>
    
    <Button name="add-column-button" width="50" height="50">
      <Text>+</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>180</OffsetX>
        <OffsetY>10</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="remove-row-button" width="50" height="50">
      <Text>-</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>10</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Button name="row-button" width="100" height="50">
      <Text></Text>
      <EventResponses>
        <EventResponse>
          <Action>edit-text</Action>
          <Trigger sender="appstate" eventtype="Select" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>70</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="0" g="0" b="0" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="0" b="255" a="255" />
    </Button>
    
    <Button name="add-row-button" width="50" height="50">
      <Text>+</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Left</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>180</OffsetX>
        <OffsetY>70</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
  </Components>
</ComponentList>