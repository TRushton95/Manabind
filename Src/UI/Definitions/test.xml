<?xml version="1.0" encoding="utf-8" ?>
<ComponentList>
  <Components>
    <Button name="options-button" width="125" height="50">
      <Text>Options</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Middle</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
    
    <Container name="confirm-container" width="500" height="300" visible="false" interactive="false">
      <EventResponses>
        <EventResponse>
          <Action>show</Action>
          <Trigger sender="options-button" eventtype="Click" />
        </EventResponse>
        <EventResponse>
          <Action>hide</Action>
          <Trigger sender="confirm-no" eventtype="Click" />
        </EventResponse>
        <EventResponse>
          <Action>hide</Action>
          <Trigger sender="confirm-yes" eventtype="Click" />
        </EventResponse>
      </EventResponses>
      <RelativePositionProfile>
        <HorizontalAlign>Middle</HorizontalAlign>
        <VerticalAlign>Middle</VerticalAlign>
        <OffsetX>50</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <BackgroundColour r="0" g="0" b="255" a="255" />
      <Components>
        
        <Button name="confirm-yes" width="125" height="50">
          <Text>Yes</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Left</HorizontalAlign>
            <VerticalAlign>Middle</VerticalAlign>
            <OffsetX>75</OffsetX>
            <OffsetY>75</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
        
        <Button name="confirm-no" width="125" height="50">
          <Text>No</Text>
          <RelativePositionProfile>
            <HorizontalAlign>Right</HorizontalAlign>
            <VerticalAlign>Middle</VerticalAlign>
            <OffsetX>-75</OffsetX>
            <OffsetY>75</OffsetY>
          </RelativePositionProfile>
          <TextColour r="0" g="0" b="0" a="255" />
          <HoverTextColour r="255" g="255" b="255" a="255" />
          <BackgroundColour r="255" g="0" b="255" a="255" />
          <HoverBackgroundColour r="255" g="50" b="255" a="255" />
        </Button>
      </Components>
    </Container>

    <Button name="close-button" width="50" height="50" visible="false" interactive="false">
      <EventResponses>
        <EventResponse>
          <Action>show</Action>
          <UIEvent sender="confirm-yes" eventtype="Click" />
        </EventResponse>
        <EventResponse>
          <Action>hide</Action>
          <UIEvent sender="confirm-no" eventtype="Click" />
        </EventResponse>
      </EventResponses>
      <Text>X</Text>
      <RelativePositionProfile>
        <HorizontalAlign>Right</HorizontalAlign>
        <VerticalAlign>Top</VerticalAlign>
        <OffsetX>0</OffsetX>
        <OffsetY>0</OffsetY>
      </RelativePositionProfile>
      <TextColour r="0" g="0" b="0" a="255" />
      <HoverTextColour r="255" g="255" b="255" a="255" />
      <BackgroundColour r="255" g="0" b="255" a="255" />
      <HoverBackgroundColour r="255" g="50" b="255" a="255" />
    </Button>
  </Components>
</ComponentList>
